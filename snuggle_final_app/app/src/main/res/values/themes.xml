<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Snuggle_final_app" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="android:windowBackground">@color/basic_backgound</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- 상태바 없애기 -->
        <item name="android:statusBarColor">@color/basic_backgound</item>
        <item name="android:textColor">@android:color/black</item>

    </style>

    <style name="Theme.Snuggle_final_app" parent="Base.Theme.Snuggle_final_app" />

    <style name="CustomCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">#795A0C</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@drawable/dialog_custom_background</item>
        <item name="android:windowMinWidthMajor">80%</item> <!-- 다이얼로그 너비 설정 -->
        <item name="android:windowMinWidthMinor">80%</item>
    </style>


</resources>