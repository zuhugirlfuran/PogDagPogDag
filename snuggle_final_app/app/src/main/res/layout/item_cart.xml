<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cart_listview_item"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:elevation="20dp"
    android:orientation="horizontal"
    android:padding="10dp">


    <ImageView
        android:id="@+id/cart_iv_product"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_marginRight="9dp"
        app:srcCompat="@drawable/item03" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cart_tv_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="푸딩 거북이"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/cart_ib_delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/white"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/cart_delete_icon" />

        </LinearLayout>

        <TextView
            android:id="@+id/cart_tv_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:layout_weight="1"
            android:text="11.30(토) 이내 발송예정"
            android:textColor="#4D4639"
            android:textSize="11dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cart_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5,000원"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@color/white"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/cart_minus" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:text="1" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="17dp"
                android:background="@color/white"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/cart_plus" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>