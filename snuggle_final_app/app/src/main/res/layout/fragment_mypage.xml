<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.mypage.MypageFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mypage_profile_background"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mypage_iv_profile"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="17dp"
                android:background="@drawable/mypage_circle_shape"
                android:clipToOutline="true"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/mypage_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:text="김싸피"
                android:textSize="25dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginRight="11dp"
                    android:layout_weight="1"
                    android:background="@drawable/mypage_info_background"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mypage_tv_rank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lv.1"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/mypage_tv_rank_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="등급"
                        android:textColor="#7D7D7D"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mypage_btn_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="11dp"
                    android:layout_weight="1"
                    android:background="@drawable/mypage_info_background"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/mypage_tv_coupon_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="쿠폰"
                        android:textColor="#7D7D7D"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/mypage_info_background"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mypage_tv_stamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/mypage_tv_stamp_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="스탬프"
                        android:textColor="#7D7D7D"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="33dp"
            android:layout_marginRight="28dp"
            android:background="@drawable/mypage_menu_background"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:id="@+id/mypage_ll_orderlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="주문내역"
                    android:textSize="15sp" />

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="21dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    android:src="@drawable/mypage_menu_arrow" />


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:src="@drawable/mypage_line" />

            <LinearLayout
                android:id="@+id/mypage_ll_bookmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="영상 책갈피"
                    android:textSize="15sp" />

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="21dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    android:src="@drawable/mypage_menu_arrow" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:src="@drawable/mypage_line" />

            <LinearLayout
                android:id="@+id/mypage_ll_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="관심상품"
                    android:textSize="15sp" />

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="21dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    android:src="@drawable/mypage_menu_arrow" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/mypage_btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:text="로그아웃"
            android:textColor="#888888"
            android:textSize="15sp" />
    </LinearLayout>
</ScrollView>
