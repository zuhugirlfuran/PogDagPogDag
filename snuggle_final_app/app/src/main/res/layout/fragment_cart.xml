<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="33dp"
    android:paddingTop="10dp"
    android:paddingRight="33dp"
    tools:context=".ui.cart.CartFragment">

    <TextView
        android:id="@+id/cart_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="장바구니"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="폭닥폭닥을 찾아주셔서 감사합니다. \n상품은 결제 후 배송은 약 3-5일 정도 소요됩니다."
        android:textSize="15sp" />

    <ListView
        android:id="@+id/cart_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:divider="@android:color/transparent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/cart_white_background"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="12dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cart_tv_total_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="총 3개"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cart_tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17,000원"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageButton
            android:layout_marginTop="12dp"
            android:id="@+id/cart_btn_order"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/order_btn" />
    </LinearLayout>
</LinearLayout>