<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cart_listview_item"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:elevation="20dp"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/orderlist_iv_img"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_marginRight="9dp"
        app:srcCompat="@drawable/item03" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/orderlist_tv_order_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="푸딩 거북이 외 1개"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/orderlist_tv_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:layout_weight="1"
            android:text="배송완료"
            android:textColor="#4D4639"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/orderlist_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5,000원"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
