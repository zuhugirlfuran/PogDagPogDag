<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/notification_item_background"
    android:elevation="20dp"
    android:orientation="horizontal"
    android:padding="21dp">

    <ImageView
        android:id="@+id/notification_item_ib2"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        tools:srcCompat="@drawable/notification_deliver_ib" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notification_tv_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="배송 출발 안내"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notification_tv_contents2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="주문하신 제품의 배송이 시작되었어요.
안전하게 배송해드릴게요." />
    </LinearLayout>
</LinearLayout>